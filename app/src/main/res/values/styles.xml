<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card View Styles -->
    <style name="CardStyle" parent="">
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- Header Text Styles -->
    <style name="HeaderTextPrimary">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="HeaderTextSecondary">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Label Text Styles -->
    <style name="LabelText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="SubLabelText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Body Text Styles -->
    <style name="BodyText">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccentButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_accent_background</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_light</item>
    </style>
</resources>

